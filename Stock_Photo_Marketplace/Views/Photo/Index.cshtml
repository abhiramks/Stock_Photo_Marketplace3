@model IEnumerable<Stock_Photo_Marketplace.Models.Photo>

@{
    ViewData["Title"] = "Photo Gallery";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    @foreach (var photo in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4">
                <img src="@Url.Content(photo.FilePath)" class="card-img-top" alt="@photo.Title">

                <div class="card-body">
                    <h5 class="card-title">@photo.Title</h5>
                    <p class="card-text">@photo.Description</p>
                    <p class="card-text"><strong>Price: @photo.Price.ToString("C")</strong></p>
                </div>
            </div>
        </div>
    }
</div>
